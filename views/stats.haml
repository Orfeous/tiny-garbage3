#resultsDiv
  %table{:id => "results"}
    %tr
      %td
        %th Number of FTP Servers
      %td
        = @total_count
    %tr
      %td
        %th Last ping
      %td
        = human_time(Time.at(@total_last_ping.to_i))
    %tr
      %td
        %th Last scan
      %td
        = human_time(Time.at(@total_last_scan.to_i))
    %tr
      %td
        %th Total number of files
      %td
        = @total_number_of_files
    %tr
      %td
        %th Total cumulative size
      %td
        = number_to_human_size(@total_size)

